<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/home_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="reco.frame.demo.sample.NewIndexpage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginRight="10px"
            android:textSize="22sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_top_clock"
            android:id="@+id/tv_top_date"
            android:text="2016-11-28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_toLeftOf="@+id/tv_top_time"
            android:id="@+id/iv_top_clock"
            android:src="@drawable/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="20px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_top_time"
            android:text="18:30"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tlMain"
        app:tabMode="scrollable"
        app:tabContentStart="@dimen/px100"
        app:tabPadding="0dp"
        app:tabPaddingTop="0dp"
        app:tabPaddingStart="@dimen/px22"
        app:tabPaddingEnd="@dimen/px22"
        app:tabPaddingBottom="0dp"
        app:tabGravity="fill"
        app:tabTextColor="#9D9D9D"
        app:tabMinWidth="@dimen/px100"
        app:tabSelectedTextColor="#ffffff"
        app:tabIndicatorColor="#E11955"
        app:tabIndicatorHeight="@dimen/px4"
        app:tabMaxWidth="@dimen/px180"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px70"
        app:tabTextAppearance="@android:style/TextAppearance.Holo.Large"
        />

    <reco.frame.demo.compoment.testViewpager
        android:focusable="true"
        android:id="@+id/vp_main_shows"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
